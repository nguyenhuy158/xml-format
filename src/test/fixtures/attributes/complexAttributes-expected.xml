<?xml version="1.0"?>
<odoo>
    <field
        name="name"
        placeholder="Enter name here with a very long text that makes the line exceed maximum length"
        required="True"
    />
    <button
        attrs="{'invisible': [('state', '=', 'done')]}"
        class="btn-primary"
        icon="fa-check"
        name="action_submit"
        string="Submit"
        type="object"
    />
</odoo>
