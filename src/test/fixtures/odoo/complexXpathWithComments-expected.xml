<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="sale_stock.view_order_form_inherit_sale_stock"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_view_delivery']/field[@name='delivery_count']"
                position="attributes"
            >
                <attribute name="string">Return</attribute>
                <!-- <button type="object" name="action_view_delivery" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="stock.group_stock_user">
                    <field
                        name="delivery_count"
                        string="Delivery"
                        widget="statinfo"/>

                </button> -->
            </xpath>
            <xpath
                expr="//button[@name='action_view_delivery']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_inherit_sale" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="farmnet_sale_order.view_order_form_inherit_sale"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_view_disbursement']"
                position="before"
            >
                <button
                    attrs="{'invisible': [('dropship_picking_count', '=', 0)]}"
                    class="oe_stat_button"
                    groups="stock.group_stock_user"
                    icon="fa-truck"
                    name="action_view_return"
                    string="Return"
                    type="object"
                />
            </xpath>
        </field>
    </record>

</odoo>
